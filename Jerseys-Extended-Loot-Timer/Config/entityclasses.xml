<ExtendedLootDropTimer>
	
<!-- Adds more TimeStayAfterDeath to EntityLoot (from 5 min to 45 min) -->
	<set xpath="/entity_classes/entity_class[contains(@name, 'EntityLoot')]/property[contains(@name, 'TimeStayAfterDeath')]/@value">2700</set>

	<!-- Easy Config 
			Set to : Minutes IRL
			   600 : 10min
			   900 : 15min
			   1200 : 20min
			   1800 : 30min
			   2400 : 40min

			   Change the value up top to fit your needs. 
			   Higher time may cause a slight bit more strain on the Server.
	-->
	
</ExtendedLootDropTimer>